{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="container">

        <div class="col d-flex justify-content-center align-items-center pt-5 pb-5" style="background-color:#f4efe0">
        

          <div class="card shadow-sm mt-5" style="width: 18rem;">
                  <h1 class="mt-5 text-center">{{produit.titre}}</h1>

            <img width="100%" height="225" src="/upload/{{produit.photo}}"/>
            <div class="card-body">
              
             <p class="card-text text-center">{{produit.description}}</p>
             <p class="text-center">{{produit.prix}}€ Taiile : {{produit.taille}} <i class="fa-regular fa-square" style="background-color: {{produit.couleur}};"></i></p>
             
              <div class="d-flex align-items-center">
                <div class="btn-group">
                </div>
                {% if produit.stock > 0 %}
                <a href="{{ path('app_add_panier', {'id': produit.id}) }}" class="btn btn-sm btn-outline-secondary">Ajouter au panier</a>
                <small class="text-success" style="margin-left: auto">En stock</small>

                {% else %}
                <a href="#" class="btn btn-sm btn-outline-secondary disabled">Ajouter au panier</a>
                 <small class="text-danger " style="margin-left: auto">Epuisé</small>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
    </div>

    
    {% endblock %}
