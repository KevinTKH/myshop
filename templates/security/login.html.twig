{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center pt-5 pb-5" style="background-color:#f4efe0">

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <h3 class="mt-5 font-weight-normal">Connectez vous</h3>
    <label class="mt-3" for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label class="mt-3" for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"    >

   <button class="btn btn-sm btn-primary mt-3" type="submit">
        Connexion
    </button>   
    <a class="btn btn-sm btn-outline-secondary mt-3" href="{{ path('app_register') }}"> Inscrivez vous !</a>

</form>
</div>

{% endblock %}
